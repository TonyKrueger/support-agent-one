# Application Configuration
APP_NAME=support-agent
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=info

# OpenAI Configuration
# Must use a standard OpenAI API key (starts with sk-)
OPENAI__API_KEY=your_openai_api_key
OPENAI__EMBEDDING_MODEL=text-embedding-3-small
OPENAI__COMPLETION_MODEL=gpt-4-turbo
OPENAI__TEMPERATURE=0.7
OPENAI__MAX_TOKENS=null
OPENAI__TIMEOUT_SECONDS=30

# Supabase Configuration
SUPABASE__URL=your_supabase_url
SUPABASE__ANON_KEY=your_supabase_anon_key
SUPABASE__SERVICE_KEY=your_supabase_service_key

# Logging Configuration
LOG__LEVEL=INFO
LOG__FORMAT=text

# Logfire Configuration
LOGFIRE_TOKEN=your_logfire_token
LOGFIRE_SERVICE_NAME=support-agent
LOGFIRE_SERVICE_VERSION=0.1.0
LOGFIRE_ENVIRONMENT=development

# Test-specific settings (only used when ENVIRONMENT=test)
TEST_MOCK_OPENAI=false
TEST_MOCK_SUPABASE=false 